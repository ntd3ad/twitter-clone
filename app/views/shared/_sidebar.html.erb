<aside class="col side-navbar position-relative">
  <%= link_to dashboard_path, class: "d-flex align-items-center " do%>
    <div class="px-4 py-4 rounded-circle">
      <span class=" position-relative" style="top: 3px; bottom: 3px;"><%= image_tag "tw.png", width: 40%></span>
    </div>
  <%end%>
  <%= link_to dashboard_path, class: "d-flex align-items-center fs-4 mb-4" do%>
    <div class="px-4 py-2 rounded-pill">
      <span class="me-3 position-relative" style="bottom: 3px;"><%= image_tag "home.png", width: 32%></span>
      Home
    </div>
   <%end%>
   <%= link_to "#", class: "d-flex align-items-center fs-4 mb-4" do%>
      <div class="px-4 py-2 rounded-pill">
        <span class="me-3 position-relative" style="bottom: 3px;"><%= image_tag "ribbon.png", width: 32%></span>
         Bookmarks
      </div>
    <%end%>
  <%= link_to "#", class: "d-flex align-items-center fs-4 mb-4" do%>
    <div class="px-4 py-2 rounded-pill">
      <span class="me-3 position-relative" style="bottom: 3px;"><%= image_tag "user.png", width: 32%></span>
      Profile
    </div>
  <%end%>
  <div class="d-flex align-items-center fs-4 mb-2 px-4 py-3">
    <%= button_tag "Tweet",  class: "btn btn-primary btn-lg rounded-pill py-2 w-100", data: {"bs-toggle": "modal", "bs-target": "#exampleModal"}  %>
  </div>
  <div class="d-flex align-items-center fs-4 mb-4 px-4">
    <%=link_to 'Log out', destroy_user_session_path, data: { "turbo-method": :delete}, class:"btn btn-primary btn-lg rounded-pill py-2 w-100" %>
  </div>
</aside>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" id="close-modal-btn" class="btn-close mx-0" data-bs-dismiss="modal" aria-label="Close"  ></button>
      </div>
            <div class="modal-body">
                <%= render partial: "shared/tweet_form" %>
            </div>
    </div>
  </div>
</div>

